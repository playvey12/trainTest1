<div class="modal-day-overlay" id="day-modal">
  <div class="modal-day">
    <div class="modal-day-header">
      <h2 class="modal-day-title">Выберите день тренировки</h2>
      <span class="modal-day-close-btn">&times;</span>
    </div>

    <div class="modal-day-body">
      <div class="days-grid">
        <div class="day-card" data-day="Monday">
          <div class="day-name">Понедельник</div>
        </div>
        <div class="day-card" data-day="Tuesday">
          <div class="day-name">Вторник</div>
        </div>
        <div class="day-card" data-day="Wednesday">
          <div class="day-name">Среда</div>
        </div>
        <div class="day-card" data-day="Thursday">
          <div class="day-name">Четверг</div>
        </div>
        <div class="day-card" data-day="Friday">
          <div class="day-name">Пятница</div>
        </div>
        <div class="day-card" data-day="Saturday">
          <div class="day-name">Суббота</div>
        </div>
        <div class="day-card" data-day="Sunday">
          <div class="day-name">Воскресенье</div>
        </div>
      </div>
    </div>

    <div class="modal-day-footer">
      <button class="modal-day-confirm-btn" id="confirm-day-btn" disabled>
        Подтвердить
      </button>
    </div>
  </div>
</div>