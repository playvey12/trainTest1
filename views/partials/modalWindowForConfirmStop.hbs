<div id="confirm-modal" class="modal-overlay">
  <div class="modal-content" style="text-align: center;">
    <div class="modal-header" style="justify-content: center;">
      <h3>{{t.workoutSession.modals.confirm_finish.title}}</h3>
    </div>
    <p style="color: var(--text-dim); margin-bottom: 20px;">
      {{t.workoutSession.modals.confirm_finish.subtitle}}
    </p>
    <div class="session-actions">
      <button class="btn-secondary-large" id="cancel-confirm-btn">
        {{t.workoutSession.modals.confirm_finish.cancel_btn}}
      </button>
      <button class="btn-primary-large" id="confirm-finish-btn">
        {{t.workoutSession.modals.confirm_finish.confirm_btn}}
      </button>
    </div>
  </div>
</div>

<div id="results-modal" class="modal-overlay">
  <div class="modal-content" style="text-align: center;">
    <div class="modal-header" style="justify-content: center;">
      <h3>{{t.workoutSession.modals.results.title}}</h3>
    </div>
    <div class="stats-grid">
      <div class="stat-box">
        <span class="stat-label">{{t.workoutSession.modals.results.time_label}}</span>
        <div class="stat-value" id="total-time-result" style="font-size: 24px;">00:00:00</div>
      </div>
      <div class="stat-box">
        <span class="stat-label">{{t.workoutSession.modals.results.rest_label}}</span>
        <div class="stat-value" id="rest-time-result" style="font-size: 24px;">00:00:00</div>
      </div>
    </div>
    <button class="btn-primary-large" id="close-results-btn" style="margin-top: 20px;">
      {{t.workoutSession.modals.results.close_btn}}
    </button>
  </div>
</div>