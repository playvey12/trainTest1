<div id="privacyModal" class="modal">
    <div class="modal-content">
        <button class="close-btn" onclick="closePrivacy()">&times;</button>

        <header class="modal-header">
            <h2>{{t.profile.privacy.title}}</h2>
        </header>

        <div class="modal-body">
            <div class="form-group form-group-first">
                <label>{{t.profile.privacy.old_password}}</label>
                <input type="password" id="oldPassword" class="modal-input" placeholder="••••••••">
            </div>
            <div class="form-group">
                <label class="newPassLabel">{{t.profile.privacy.password_label}}</label>
                <input type="password" id="newPassword" class="modal-input" placeholder="••••••••">
            </div>

            <div class="form-group">
                <label>{{t.profile.privacy.password_confirm}}</label>
                <input type="password" id="confirmPasswordUser" class="modal-input" placeholder="••••••••">
            </div>

            <hr style="border: 0; border-top: 1px solid var(--border-light); margin: 20px 0;">



            <button class="secondary-btn" onclick="logout()"
                style="background: transparent; border: 1px solid #ff3b5c; color: #ff3b5c; width: 100%; padding: 12px; border-radius: 15px; cursor: pointer; font-size: 13px; margin-bottom: 15px;">
                <i class="fas fa-user-shield" style="margin-right: 8px;"></i> {{t.profile.privacy.logout_all}}
            </button>

            <button class="save-modal-btn" onclick="savePrivacySettings()">
                {{t.profile.privacy.save_btn}}
            </button>
        </div>
    </div>
</div>