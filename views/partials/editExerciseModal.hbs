<div id="editExerciseModal" class="modal-overlay">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-edit"></i> {{t.profile.modal.edit_tittle}}</h2>
      <button class="close-btn" onclick="closeModalWindow()">&times;</button>
    </div>
    <div class="modal-body">
      <div class="input-group">
        <label>{{t.profile.trainPlan.name}}</label>
        <input type="text" id="edit-exercise-name">
      </div>
      <div class="input-row">
        <div class="input-group">
          <label>{{t.profile.trainPlan.sets}}</label>
          <input type="number" id="edit-exercise-approaches">
        </div>
        <div class="input-group">
          <label>{{t.profile.trainPlan.kg}}</label>
          <input type="text" id="edit-exercise-weight">
        </div>
      </div>
    </div>
    <div class="modal-footer">

      <button id="confirmEditBtn" class="btn-primary">{{t.profile.modal.save_btn}}</button>
    </div>
  </div>
</div>