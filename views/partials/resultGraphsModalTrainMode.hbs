<div id="weight-modal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Зафиксировать вес</h3>
            <button class="close-modal" id="close-weight-modal">&times;</button>
        </div>
        <div class="modal-body">
            <p id="weight-modal-exercise-name" style="font-weight: bold; color: var(--accent-color);"></p>
            <div class="input-group">
                <label for="weight-input">Ваш рабочий вес (кг):</label>
                <input type="number" id="weight-input" placeholder="Например: 85" step="0.5">
            </div>
        </div>
        <div class="modal-footer">
            <button id="save-weight-btn" class="btn-confirm-modal">Сохранить</button>
        </div>
    </div>
</div>