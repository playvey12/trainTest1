<section class="card main-chart-card">
    <div class="card-header">
        <div class="card-title-group">
            <h2>{{t.progressPage.mainChart.title}}</h2>
            <span class="subtitle">{{t.progressPage.mainChart.subtitle}}</span>
        </div>
        <div class="card-controls">
            <div class="select-group">
                <label>{{t.progressPage.mainChart.exerciseLabel}}</label>
                <select class="custom-select" id="exercise-select">
                    <option value="" disabled selected>Загрузка...</option>
                </select>
            </div>
            <div class="select-group">
                <label>{{t.progressPage.mainChart.periodLabel}}</label>
                <select class="custom-select" id="period-select">
                    <option value="30days">{{t.progressPage.mainChart.currentPeriod}}</option>
                    <option value="3months">3 Месяца</option>
                    <option value="all_time">Все время</option>
                </select>
            </div>
        </div>
    </div>
    <div class="chart-wrapper">
        <canvas id="mainProgressChart"></canvas>
    </div>
</section>