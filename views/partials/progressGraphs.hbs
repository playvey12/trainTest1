<!-- progressGraphs.hbs -->
<div class="progress-section rounded-section">
  <div class="progress-header">
    <h2 class="section-title">Ваш прогресс</h2>
    <div class="progress-subtitle">Динамика рабочего веса</div>
  </div>

  <div class="filters-section rounded-filters">
    <div class="filter-card filter-rounded">
      <div class="filter-header">
        <div class="filter-title">Упражнение</div>
      </div>
      <select id="exercise-select" class="rounded-select">
        <option value="">Выберите упражнение</option>
        {{#if uniqueExercises}}
        {{#each uniqueExercises}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
        {{else}}
        {{#each daysOfWeek}}
        {{#each (lookup ../trainData this)}}
        <option value="{{this.exerciseName}}">{{this.exerciseName}}</option>
        {{/each}}
        {{/each}}
        {{/if}}
      </select>
    </div>

    <div class="filter-card filter-rounded">
      <div class="filter-header">
        <div class="filter-title">Период</div>
      </div>
      <select id="period-select" class="rounded-select">

        <option value="6months">6 месяцев</option>
        <option value="year">Год</option>
        <option value="all">Всё время</option>
      </select>
    </div>
  </div>

  <div class="chart-container-wrapper">
    <div class="chart-container rounded-chart">

      <canvas id="exerciseChart"></canvas>
    </div>
    <div id="no-exercise-data" class="no-data-message" style="display: none;">
      <p>Нет данных для выбранного упражнения</p>
      <p class="hint">Выполните упражнение хотя бы один раз, чтобы увидеть прогресс</p>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>